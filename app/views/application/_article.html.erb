<div class="page-title">
	<h1><%= article['article.title'].as_text %></h1>
	<% if article['article.lede'] %>
		<%= article['article.lede'].as_html_safe(link_resolver(maybe_ref)) %>
	<% end %>
</div>

<% if article['article.body'] %>
	<div id="content" class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<%= article['article.body'].as_html_safe(link_resolver(maybe_ref)) %>
		</div>
	</div>
<% end %>